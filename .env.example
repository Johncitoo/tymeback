# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=gym_db
DB_LOGGING=false

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# ========================================
# RESEND (Email Service)
# Para envío de emails (notificaciones, campañas, recordatorios)
# Documentación: https://resend.com/docs
# Plan Gratuito: 3,000 emails/mes (100/día)
# ========================================
# API Key de Resend (obtener en: https://resend.com/api-keys)
RESEND_API_KEY=re_your_api_key_here

# Email remitente (por defecto usa el de Resend, luego puedes usar tu dominio)
RESEND_FROM_EMAIL=onboarding@resend.dev
# Email para respuestas (opcional)
RESEND_REPLY_TO=support@tymegym.com

# Modo de prueba: 'true' para NO enviar emails reales (solo logs)
EMAIL_DRY_RUN=false

# ========================================
# GOOGLE CLOUD STORAGE
# Para almacenamiento de archivos (fotos, documentos, PDFs)
# Documentación: https://cloud.google.com/storage/docs
# ========================================
# Nombre del bucket (debe existir en GCP)
GCS_BUCKET=tyme-gym-files

# Ruta al archivo JSON de credenciales de la cuenta de servicio
# Obtener desde: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_APPLICATION_CREDENTIALS=./gcs-service-account-key.json

# Configuración de URLs firmadas (en segundos)
GCS_UPLOAD_EXPIRY_SECONDS=3600
GCS_DOWNLOAD_EXPIRY_SECONDS=3600
# Tamaño máximo de archivos en MB
GCS_MAX_FILE_SIZE_MB=10

# ========================================
# FRONTEND CONFIGURATION
# ========================================
FRONTEND_URL=http://localhost:5173
