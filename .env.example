# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=gym_db
DB_LOGGING=false

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# ========================================
# EMAIL CONFIGURATION
# ========================================
# Gmail SMTP (recomendado para producción)
EMAIL_FROM=tu-email@gmail.com
EMAIL_FROM_NAME=TYME Gym

# Usuario de Gmail
GMAIL_USER=tu-email@gmail.com

# Contraseña de aplicación de Gmail (NO tu contraseña normal)
# Generar en: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD=tu_app_password_de_16_caracteres

# Modo de prueba: 'true' para NO enviar emails reales (solo logs)
EMAIL_DRY_RUN=false

# ========================================
# GOOGLE CLOUD STORAGE
# Para almacenamiento de archivos (fotos, documentos, PDFs)
# Documentación: https://cloud.google.com/storage/docs
# ========================================
# Project ID de Google Cloud
GCP_PROJECT_ID=tu-project-id

# Nombre del bucket (debe existir en GCP)
GCP_BUCKET_NAME=tu-bucket-name

# Credenciales de la cuenta de servicio
GCP_SERVICE_ACCOUNT_EMAIL=tu-service-account@tu-project.iam.gserviceaccount.com

# Private Key de la cuenta de servicio (copiar desde el JSON descargado de GCP)
# IMPORTANTE: Mantener los saltos de línea como \n
GCP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nTU_PRIVATE_KEY_AQUI\n-----END PRIVATE KEY-----"

# Configuración de URLs firmadas (en segundos)
GCS_SIGNED_PUT_TTL_SECONDS=900
GCS_SIGNED_GET_TTL_SECONDS=600

# Tamaño máximo de archivos en bytes (10 MB por defecto)
UPLOAD_MAX_BYTES=10485760

# ========================================
# FRONTEND CONFIGURATION
# ========================================
FRONTEND_URL=http://localhost:5173
